<!DOCTYPE html>
<html lang="es">
    <head>
        <title>ICPNA</title>
        <meta charset="UTF-8" />
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/applicationsubscriber/css/bootstrap.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/applicationsubscriber/css/bootstrap-responsive.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/applicationsubscriber/css/style.css') }}" />
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
        <script src="js/bootstrap.js" type="text/javascript"></script>
        {{styles}}
        {{javascripts}}
    </head>
    <body>
        
        <div class="container">
            <div>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                    <a href="{{ path('logout') }}">
                        {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                    </a>

                    {% block terms_content %}
                    {% endblock terms_content %}

                    {% block modules_content %}
                    {% endblock modules_content %}

                {% else %}
                    <!--a href="{{ path('login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a-->

                    {% block user_login %}
                    {% endblock user_login %}

                {% endif %}

            </div>

            {% for type, messages in app.session.flashBag.all %}
                {% for message in messages %}
                    <div class="{{ type }}">
                        {{ message|trans({}, 'FOSUserBundle') }}
                    </div>
                {% endfor %}
            {% endfor %}
            <div>
            </div>
        </div>
    </body>
</html>
